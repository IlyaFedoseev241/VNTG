<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">
    <ImageView
        android:id="@+id/admin_camera_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/camera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        >
    </ImageView>
    <EditText
        android:id="@+id/admin_named_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название товара"
        android:layout_below="@+id/admin_camera_icon"
        >
    </EditText>
    <EditText
        android:id="@+id/admin_price_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Стоимость товара"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/admin_named_et"
        >
    </EditText>
    <EditText
        android:id="@+id/admin_description_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание товара"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/admin_price_et"
        >
    </EditText>

    <Button
        android:id="@+id/admin_save_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/admin_description_et"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickSave"
        android:text="Save">

    </Button>

   <Button
       android:id="@+id/admin_read_btn"
       android:layout_width="150dp"
       android:layout_height="60dp"
       android:layout_below="@+id/admin_description_et"
       android:layout_alignParentRight="true"
       android:layout_marginStart="15dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="15dp"
       android:onClick="onClickRead"
       android:text="Read">

   </Button>

    <Button
        android:id="@+id/admin_choose_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/admin_read_btn"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:onClick="onClickChooseImage"
        android:text="Choose image"
        android:textSize="18sp"></Button>
</RelativeLayout>