<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <EditText
        android:id="@+id/login_phone_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Номер телефона"
        android:inputType="number"
        >
    </EditText>
    <EditText
        android:id="@+id/login_password_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_phone_ed"
        android:layout_marginTop="40dp"
        android:hint="Пароль"
        android:inputType="textPassword"
        >
    </EditText>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Вход"
        android:textSize="20sp"
        android:layout_below="@+id/login_password_ed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >
    </Button>
    <Button
        android:id="@+id/login_admin_panel_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="for admin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        >

    </Button>
    <Button
        android:id="@+id/login_client_panel_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="for client"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:visibility="invisible"
        >

    </Button>
    <Button
        android:id="@+id/fastClient"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="client"
        >

    </Button>
    <Button
        android:id="@+id/fastAdmin"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:text="admin"
        >
    </Button>


</RelativeLayout>